
<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudStack Spacing="2">

                <MudTextField @bind-Value="_model.Title" Label="Title" Required="true" Immediate="true" />
                <MudTextField @bind-Value="_model.Username" Label="Username" Immediate="true" />
                <MudTextField @bind-Value="_model.Password" Label="Password"
                              InputType="@(_show? InputType.Text: InputType.Password)"
                              Required="true" Immediate="true" />
                <MudCheckBox @bind-Value="_show" Label="Show password"></MudCheckBox>
            </MudStack>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
        <MudButton OnClick="Save" Color="Color.Primary" Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>